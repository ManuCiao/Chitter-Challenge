<h2 style="color:#fff;font-family: fantasy;">List of Peeps</h2>
<div class="post-form">
  <% if current_user %>
  <form method = "post" action="/peeps">
    <div class="form">
        <label for="peep">Post your PEEP here:</label><br>
        <textarea style="width:250px;" class="form-control" rows="5" name="peep"></textarea><br>
        <button type="submit" class="btn btn-primary">Peep me!</button>
      </div>
      </form>
    </div>
  <% end %>
</div>
<br>
<div class="message" style="color:#000;">
  <% Peep.all(order: [:time.desc]).each do |peep| %>
      <div class="panel" style="background-color:#fff;width:250px;border-radius: 15px;">
        <h2 class="panel-title"> <%= peep.user.username.to_s.capitalize %> </h2>
        " <%= peep.peep %> "
        <br>
        <% if peep.time %>
          <%= peep.time.strftime("%d/%m/%Y") + peep.time.strftime(" at %I:%M %p")  %>
        <% else %>
          Unknown Date
        <% end %>
      </div>
      <br>
  <% end %>
</div>
